# Database
DATABASE_URL="postgresql://username:password@localhost:5432/usdc_payroll?schema=public"

# Circle API Configuration
CIRCLE_API_KEY="your_circle_api_key_here"
CIRCLE_ENVIRONMENT="sandbox" # or "production"

# Circle Web3 Services
CIRCLE_W3S_API_KEY="your_w3s_api_key_here"
CIRCLE_W3S_ENTITY_SECRET="your_entity_secret_here"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_SECRET="your_webhook_secret_here"

# Logging
LOG_LEVEL="info"

# Chain RPC URLs (optional - uses public RPCs by default)
ETHEREUM_RPC_URL="https://sepolia.infura.io/v3/your_infura_key"
ARBITRUM_RPC_URL="https://sepolia-rollup.arbitrum.io/rpc"
BASE_RPC_URL="https://sepolia.base.org"
AVALANCHE_RPC_URL="https://api.avax-test.network/ext/bc/C/rpc"
POLYGON_RPC_URL="https://rpc-amoy.polygon.technology"
